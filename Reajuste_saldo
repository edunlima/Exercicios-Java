import java.util.*;
public class Main
{
	public static void main(String[] args) {
	    Scanner entrada = new Scanner(System.in);
	    System.out.println("Digite o valor do seu saldo: ");
	    double saldo = entrada.nextDouble();
	    double saldo_reajustado = (saldo * 0.01) + saldo;
	    System.out.println("O valor do saldo com reajuste de 1% Ã©: " + saldo_reajustado);
	    entrada.close();
	}
}
